  </div>
</div>

{% stylesheet %}
{% endstylesheet %}

{% javascript %}
{% endjavascript %}

{% schema %}
  {
    "name": "Menu Drawer",
    "tag": "section",
    "class": "menu-drawer",
    "settings": [
      {
			  "label": "Background",
			  "type": "select",
			  "options": [{
					  "value": "black",
					  "label": "Black"
				  },
				  {
					  "value": "orange",
					  "label": "Orange"
				  },
				  {
					  "value": "white",
					  "label": "White"
				  }
			  ],
			  "default": "black",
			  "id": "background"
		  }
    ],
	  "blocks": [
      {
			  "name": "Menu",
			  "type": "menu",
			  "settings": [
          {
			      "label": "Style",
			      "type": "select",
			      "options": [
              {
                "label": "Primary",
					      "value": "primary"
				      },
				      {
                "label": "Secondary",
					      "value": "secondary"
				      }
			      ],
			      "default": "primary",
			      "id": "style"
		      },
          {
					  "label": "Menu",
					  "type": "link_list",
					  "id": "menu"
				  }
        ]
      }
    ]
  }
{% endschema %}
