/* Body */

body {

  .grecaptcha-badge {
    display: none;
  }

  @media screen and (min-width: 750px) {
    font-size: 1.45rem;
  }

}

/* Typography */

.body-copy,
.body-copy--primary {
  font-family: "Akkurat Mono LL", serif;
}


.body-copy a,
.body-copy p,
.body-copy li {
  font-family: inherit;
  font-weight: inherit;
  font-size: inherit;
}

.body-copy a {
  display: inline-block;
  line-height: 1;
}

.heading--primary,
.heading--secondary {
  margin: 0;
  padding: 0;
  display: block;
}

.heading {
  color: #FFFFFF;
  line-height: 1.1;
}

.heading--primary {
  font-family: "Nickel Gothic Variable", sans-serif;
}

.heading--secondary {
  font-family: "PP Neue Montreal Bold", sans-serif;
}

.uppercase {
  text-transform: uppercase;
}

/* Typography */
.collection__hero {
  text-align: center;
}

/* New Stuff */
.product__accordion summary,
.product__accordion .accordion__content {
  font-family: "Akkurat Mono LL", serif;
}

.social-sharing {
  display: inline-flex;
  width: 100%;
  justify-content: flex-start;
  align-items: center;
}

.social-sharing__title {
  display:none;
}

.accordion {
  border-top: 1px solid white;
  border-bottom: 1px solid white;
}

.product .price {
  font-family: "PP Neue Montreal Bold", sans-serif;
  letter-spacing: 0;
  font-weight: bold;
  & > * {
    font-family: "PP Neue Montreal Bold", sans-serif;
    letter-spacing: 0;
    font-weight: bold;
  }
}

.product__accordion .summary__title,
.product__accordion .accordion__content {
  padding: 0 !important;
}

.announcement-bar {
  border-bottom: 1px solid rgba(255,255,255, 1);
}

.announcement-text {
  font-family: "PP Neue Montreal Bold",sans-serif;
  letter-spacing: -.02em !important;
  text-transform: none;
  font-size: 20px;
}

announcement-bar.single-announcement {
  column-gap: 0;
}

.image-with-text__heading {
  font-family: Nickel Gothic Variable,sans-serif!important;
  text-transform: uppercase;
  font-size: 35px;
  line-height: .95;
  @media screen and (min-width: 750px) {
    font-size: 85px;
  }
}

.image-with-text__text {
  font-family: "Akkurat Mono LL", serif;
  text-transform: none;
}
